<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECEFF1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

<ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

<LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/search_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">

            <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_view"
                    android:layout_width="297dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/searchview_rounded"
                    android:gravity="center_vertical"
                    android:hint="Search"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="2dp"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textColorHint="#b3ffffff"/>


        </LinearLayout>


        <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

            <TextView

                    android:text="How may we serve you today?"
                    android:textSize="20.5sp"
                    android:textColor="#DE000000"
                    android:id="@+id/texV"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



            <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="30dp"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/tools2"
                        android:orientation="vertical"
                        android:layout_height="209dp">


                    <TextView
                            android:id="@+id/primary_text"
                            android:layout_width="175dp"
                            android:layout_height="62dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="19dp"
                            android:layout_marginTop="150dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="Electrical services"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#fff" android:textStyle="bold" android:textSize="24sp"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="30dp"

                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/keeper"
                        android:orientation="vertical"
                        android:layout_height="209dp">

                    <TextView
                            android:id="@+id/primary_text1"
                            android:layout_width="175dp"
                            android:layout_height="62dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="19dp"
                            android:layout_marginTop="150dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"

                            android:text="Housekeeping"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#DE000000" android:textStyle="bold" android:textSize="24sp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="30dp"

                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/handyman"
                        android:orientation="vertical"
                        android:layout_height="209dp">


                    <TextView
                            android:id="@+id/primary_text2"
                            android:layout_width="175dp"
                            android:layout_height="62dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="19dp"
                            android:layout_marginTop="150dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"

                            android:text="Handyman and carpenter"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#DE000000" android:textStyle="bold" android:textSize="24sp"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="30dp"

                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/landscaping2"
                        android:orientation="vertical"
                        android:layout_height="209dp">


                    <TextView
                            android:id="@+id/primary_text3"
                            android:layout_width="175dp"
                            android:layout_height="62dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="19dp"
                            android:layout_marginTop="150dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="Landscaping"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#DE000000" android:textStyle="bold" android:textSize="24sp"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="30dp"

                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/pests"
                        android:orientation="vertical"
                        android:layout_height="209dp">


                    <TextView
                            android:id="@+id/primary_text4"
                            android:layout_width="175dp"
                            android:layout_height="62dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="19dp"
                            android:layout_marginTop="150dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text=" Pest Control"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#DE000000" android:textStyle="bold" android:textSize="24sp"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
</LinearLayout>


</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>